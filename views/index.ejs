<div class="max-w-4xl w-full space-y-8 mx-auto">
    <div class="text-center">
        <h1 class="text-4xl font-extrabold text-shadow-grey-50 tracking-tight sm:text-5xl mb-2">
            Pastebin<span class="text-golden-chestnut-500">Lite</span>
        </h1>
        <p class="text-lg text-shadow-grey-300">
            Share text and code snippets with optional expiration and view limits.
        </p>
    </div>

    <div class="bg-shadow-grey-800 py-8 px-4 shadow-xl sm:rounded-xl sm:px-10 border border-shadow-grey-700">
        <form id="pasteForm" class="space-y-6">
            <!-- Content Area -->
            <div>
                <label for="content" class="block text-sm font-medium text-shadow-grey-200 mb-2">
                    Content
                </label>
                <div class="relative rounded-md shadow-sm">
                    <textarea id="content" name="content" rows="12"
                        class="focus:ring-golden-chestnut-500 focus:border-golden-chestnut-500 block w-full sm:text-sm border-shadow-grey-600 rounded-md p-4 font-mono text-shadow-grey-100 bg-shadow-grey-900"
                        placeholder="Paste your text or code here..." required></textarea>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-6">
                <!-- Expiration -->
                <div class="flex-1">
                    <label for="ttl" class="block text-sm font-medium text-shadow-grey-200 mb-2">
                        Expiration
                    </label>
                    <select id="ttl" name="ttl"
                        class="block w-full py-2 px-3 border border-shadow-grey-600 bg-shadow-grey-900 text-shadow-grey-200 rounded-md shadow-sm focus:outline-none focus:ring-golden-chestnut-500 focus:border-golden-chestnut-500 sm:text-sm">
                        <option value="">Never</option>
                        <option value="300">5 Minutes</option>
                        <option value="3600">1 Hour</option>
                        <option value="86400">1 Day</option>
                        <option value="604800">1 Week</option>
                        <option value="2592000">1 Month</option>
                    </select>
                </div>

                <!-- Max Views -->
                <div class="flex-1">
                    <label for="max_views" class="block text-sm font-medium text-shadow-grey-200 mb-2">
                        Max Views (Optional)
                    </label>
                    <input type="number" name="max_views" id="max_views"
                        class="focus:ring-golden-chestnut-500 focus:border-golden-chestnut-500 block w-full sm:text-sm border-shadow-grey-600 bg-shadow-grey-900 text-shadow-grey-200 rounded-md p-2"
                        placeholder="e.g. 5" min="1">
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="pt-4">
                <button type="submit" id="submitBtn"
                    class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-golden-chestnut-600 hover:bg-golden-chestnut-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-golden-chestnut-500 transition-colors duration-200">
                    Create Paste
                </button>
                <!-- Loading State (hidden by default) -->
                <button type="button" id="loadingBtn"
                    class="hidden w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-golden-chestnut-400 cursor-not-allowed"
                    disabled>
                    <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg"
                        fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4">
                        </circle>
                        <path class="opacity-75" fill="currentColor"
                            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                        </path>
                    </svg>
                    Creating...
                </button>
            </div>

            <!-- Error Message -->
            <div id="errorMessage" class="hidden rounded-md bg-red-50 p-4 border border-red-200">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                            fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800" id="errorText">
                            <!-- Error text goes here -->
                        </h3>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <p class="text-center text-sm text-shadow-grey-400">
        &copy; 2025 Pastebin-Lite. Simple, fast, secure.
    </p>
</div>