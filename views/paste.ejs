<div class="max-w-4xl w-full mx-auto">
    <div class="flex items-center justify-between mb-8">
        <a href="/" class="group flex items-center">
            <svg class="h-6 w-6 text-golden-chestnut-500 group-hover:text-golden-chestnut-400 transition-colors mr-2"
                fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            <span
                class="text-lg font-bold text-shadow-grey-100 group-hover:text-golden-chestnut-500 transition-colors">Create
                New</span>
        </a>
        <span class="text-sm font-mono text-shadow-grey-400 bg-shadow-grey-800 px-2 py-1 rounded">ID: <%= pasteId %>
        </span>
    </div>

    <% if (locals.isCreatorPreview) { %>
        <!-- Creator Preview Badge -->
        <div class="bg-golden-chestnut-900 border-l-4 border-golden-chestnut-500 p-4 mb-6 rounded">
            <div class="flex items-center">
                <svg class="h-5 w-5 text-golden-chestnut-400 mr-2" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                <p class="text-sm font-medium text-golden-chestnut-200">
                    <strong>Creator Preview:</strong> This view doesn't count toward your view limit. Share the link
                    below.
                </p>
            </div>
        </div>
        <% } %>
            <!-- Share Link Section -->
            <div
                class="bg-shadow-grey-800 p-4 rounded-lg shadow-sm border border-shadow-grey-700 mb-6 flex flex-col sm:flex-row items-center gap-3">
                <span class="text-sm font-medium text-shadow-grey-300 whitespace-nowrap">Share Link:</span>
                <div class="flex-1 w-full flex rounded-md shadow-sm">
                    <input type="text" readonly value="<%= fullUrl %>" id="shareUrl"
                        class="focus:ring-golden-chestnut-500 focus:border-golden-chestnut-500 flex-1 block w-full rounded-none rounded-l-md sm:text-sm border-shadow-grey-600 bg-shadow-grey-900 text-shadow-grey-200 p-2">
                    <button onclick="copyLink()"
                        class="inline-flex items-center px-4 py-2 border border-l-0 border-shadow-grey-600 rounded-r-md bg-shadow-grey-700 text-shadow-grey-200 hover:bg-shadow-grey-600 focus:outline-none focus:ring-1 focus:ring-golden-chestnut-500 focus:border-golden-chestnut-500 text-sm font-medium transition-colors">
                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                    </button>
                </div>
            </div>

            <div
                class="bg-shadow-grey-800 px-2 py-6 shadow-xl sm:rounded-xl sm:px-10 border border-shadow-grey-700 min-h-[50vh]">
                <% if (metadata.length> 0) { %>
                    <div
                        class="bg-shadow-grey-800 border-l-4 border-golden-chestnut-500 p-4 mb-6 text-sm text-golden-chestnut-400 font-medium space-y-1 sm:space-y-0 sm:space-x-4 sm:flex">
                        <% metadata.forEach((item, index)=> { %>
                            <span>
                                <%= item %>
                            </span>
                            <% if (index < metadata.length - 1) { %><span
                                    class="hidden sm:inline text-shadow-grey-600">|</span>
                                <% } %>
                                    <% }) %>
                    </div>
                    <% } %>
                        <pre id="pasteContent"
                            class="font-mono text-sm sm:text-base text-shadow-grey-200 whitespace-pre-wrap break-words leading-relaxed overflow-x-auto"><%= content %></pre>
            </div>

            <div class="mt-8 text-center">
                <button onclick="copyContent()"
                    class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-golden-chestnut-600 hover:bg-golden-chestnut-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-golden-chestnut-500">
                    <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
                    </svg>
                    Copy Content
                </button>
            </div>
</div>